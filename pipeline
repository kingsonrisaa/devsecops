pipeline {
  agent {
    kubernetes {
      yaml '''
apiVersion: v1
kind: Pod
metadata:
  name: checkov
  namespace: jenkins-itpassionforever
spec:
  containers:
  - name: checkov
    image: bridgecrew/checkov
    command:
    - cat
    tty: true
'''   
    }
  }
  stages {
    stage('itpassionforever - check version') {
      steps {
        container('checkov') {
          sh 'checkov --version'
        }
      }
    }
    stage('itpassionforever - Analyze code IaC') {
      steps {
        container('checkov') {
          sh 'checkov -d compliant --quiet --compact'
        }
      }
    }
  }
}

